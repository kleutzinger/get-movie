{
  "name": "node-js-sample",
  "version": "0.2.0",
  "description": "A sample Node.js app using Express 4",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build": "tailwindcss -i ./public/style.in.css -o ./public/style.css --minify",
    "dev": "concurrently --raw \"npm:watch-node\" \"npm:watch-tailwind\"",
    "watch-node": "nodemon start",
    "watch-tailwind": "tailwindcss -i ./public/style.in.css -o ./public/style.css --watch"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "emoji-favicon": "^0.3.0",
    "express": "^4.13.3",
    "json-html-table": "^2.0.1",
    "json2html": "^0.0.8",
    "node-fetch": "^3.3.0",
    "snowfl-api": "^1.0.2"
  },
  "engines": {
    "node": "20.x"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "author": "Kevin Leutzinger",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "concurrently": "^8.2.2",
    "daisyui": "^4.7.2",
    "nodemon": "^3.1.0",
    "tailwindcss": "^3.4.1"
  }
}
